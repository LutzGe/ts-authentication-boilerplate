{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [],
    "allowJs": true,
    "rootDir": "./src",
    "removeComments": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
